<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_Message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_MMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_message_gray"
        android:maxWidth="250dp"
        android:padding="10dp"
        android:text="This is where a message goes"

        />

    <TextView
        android:id="@+id/tv_MName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_MMessage"
        android:layout_marginTop="0dp"
        android:maxWidth="250dp"
        android:padding="1dp"
        android:text="Users name"/>
</RelativeLayout>